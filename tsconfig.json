{
  "include": ["src"],
  // "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "jsx": "react",
    // "target": "es2016",
    "lib": ["DOM", "ESNext"],

    /* Modules */
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
